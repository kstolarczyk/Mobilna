<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1">
      <mvvmcross.droidx.MvxSwipeRefreshLayout
        android:orientation="vertical"
        app:MvxBind="Refreshing IsBusy; RefreshCommand RefreshCommand"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
          android:id="@+id/obiekty_recyclerview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:MvxBind="ItemsSource Obiekty; ItemClick DetailsCommand; ItemLongClick ContextMenuCommand"
          app:MvxItemTemplate="@layout/obiekt_item" />
      </mvvmcross.droidx.MvxSwipeRefreshLayout>
    </androidx.cardview.widget.CardView>
  <LinearLayout
    android:layout_weight="0"
    android:orientation="horizontal"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/linearLayout1">
    <LinearLayout
      android:orientation="horizontal"
      android:minWidth="25px"
      android:minHeight="25px"
      android:gravity="left"
      android:layout_weight="1"
      android:layout_gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/linearLayout3">
      <ImageView
        android:src="@drawable/ic_wifi_tethering_green_400_36dp"
        android:contentDescription="online_or_offline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:MvxBind="Drawable IsConnected, Converter=IsConnectedDrawable"
        android:id="@+id/imageView1" />
      <TextView
        android:text="Online"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/textView1"
        app:MvxBind="Text IsConnected, Converter=IsConnected; TextColor IsConnected, Converter=IsConnectedColor" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:clickable="true"
      app:MvxBind="Click SynchronizeCommand"
      android:minWidth="25px"
      android:minHeight="25px"
      android:gravity="right"
      android:background="?android:attr/selectableItemBackground"
      android:layout_gravity="right"
      android:padding="5dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/linearLayout2">
      <ImageView
        android:src="@drawable/ic_sync_green_400_36dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:MvxBind="Drawable SyncStatus, Converter=CanSynchronizeDrawable"
        android:id="@+id/imageView2" />
      <TextView
        android:text="Synchronizacja"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:MvxBind="Text SyncStatus, Converter=CanSynchronizeText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:id="@+id/textView2" />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>